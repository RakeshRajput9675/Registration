<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="10dp"
    android:layout_margin="12dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- User ID -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">



            <TextView
                android:id="@+id/tvUserId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID: 101"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginVertical="12dp" />

        <!-- Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: Rakesh Kumar"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2196F3" />
        </LinearLayout>

        <!-- Gender and DOB -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tvGender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Gender: Male"
                android:textSize="14sp"
                android:textColor="#555555" />

            <TextView
                android:id="@+id/tvDOB"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DOB: 12-Jan-1995"
                android:textSize="14sp"
                android:textColor="#555555" />
        </LinearLayout>

        <!-- Email -->
        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email: rakesh@email.com"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginTop="8dp" />

        <!-- Contact -->
        <TextView
            android:id="@+id/tvContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact: +91-9876543210"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginTop="4dp" />

        <!-- Fees Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tvRegFees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registration Fees: ₹1000.0"
                android:textSize="14sp"
                android:textColor="#555555" />

            <TextView
                android:id="@+id/tvCollegeFees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="College Fees: ₹5000.0"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvExamFees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exam Fees: ₹2000.0"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_marginTop="4dp" />

            <!-- Total Fees Highlighted -->
            <TextView
                android:id="@+id/tvTotalFees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Fees: ₹8000.0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FF5722"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Address and Passing Year -->
        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address: Chandigarh, India"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/tvPassingYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Passing Year: 2025"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginTop="4dp" />

        <!-- Edit Button -->

            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update"
                android:layout_gravity="center_horizontal"
                android:textSize="16sp"
                android:backgroundTint="#FFC107"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:padding="12dp"
                />

    </LinearLayout>
</androidx.cardview.widget.CardView>
